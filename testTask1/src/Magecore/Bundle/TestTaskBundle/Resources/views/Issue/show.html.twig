{% extends '::base.html.twig' %}



{% block main %}
    <h1>{{ 'issue.title'|trans }}</h1>
    {% import "MagecoreTestTaskBundle:Macro:Macro.html.twig" as frms %}

    {#{ frms.linkParams(route_helper.Route(app.user)) }#}


    {#{{ frms.linkEnt(app.user) }}#}
{#<br>#}
    {#{{ "now"|date('Y-m-d H:i:s','UTC') }}#}
